<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginStyles">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="loginEditTexts" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="loginButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:radius">15dp</item>
    </style>

    <style name="patientInfoTVSize" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="patientInfoETSize" parent="android:Widget.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">#eee</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>