<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_login_bg"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/editVolunteerSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Details"
                android:textColor="#222"
                android:textSize="37sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Edit Volunteer Details"
                android:textColor="#555"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/volunteerNameET"
                style="@style/loginEditTexts"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/volunteerPhoneET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="12" />

            <EditText
                android:id="@+id/volunteerDOBET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:focusable="false"
                android:hint="Date of Birth"
                android:inputType="date" />

            <EditText
                android:id="@+id/volunteerAddressET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"

                android:hint="Address"
                android:inputType="textPostalAddress" />

            <RadioGroup
                android:id="@+id/volunteerGenderRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender:"
                    android:textSize="23sp" />

                <RadioButton
                    android:id="@+id/volunteerMaleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textColor="#666"
                    android:textSize="23sp" />

                <RadioButton
                    android:id="@+id/volunteerFemaleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#666"
                    android:textSize="23sp" />
            </RadioGroup>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/editDetailsBackTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:text="Back"
                    android:textColor="#154c40"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/editFinishVolunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:text="Finish"
                    android:textColor="#154c40"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>