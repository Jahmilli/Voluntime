<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_1"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/editVolunteerSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Details"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/whiteColor"
                android:textSize="35sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Volunteer Details"
                android:textSize="23sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/editVolunteerNameET"
                style="@style/loginEditTexts"
                android:layout_marginTop="25sp"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editVolunteerPhoneET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="12" />

            <EditText
                android:id="@+id/editVolunteerDOBET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:focusable="false"
                android:hint="Date of Birth"
                android:inputType="date" />

            <EditText
                android:id="@+id/editVolunteerAddressET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"

                android:hint="Address"
                android:inputType="textPostalAddress" />

            <RadioGroup
                android:id="@+id/editVolunteerGenderRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender:"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/whiteColor"
                    android:textSize="23sp" />

                <RadioButton
                    android:id="@+id/editVolunteerMaleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/whiteColor"
                    android:buttonTint="@color/whiteColor"
                    android:textSize="23sp" />

                <RadioButton
                    android:id="@+id/editVolunteerFemaleRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/whiteColor"
                    android:buttonTint="@color/whiteColor"
                    android:textSize="23sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/editFinishVolunteer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rect_whitefull"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#0000"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="FINISH"
                    android:textColor="#009eee"
                    android:textSize="15.4dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>