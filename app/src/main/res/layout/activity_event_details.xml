<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    android:fillViewport="true"
    tools:context=".Activities.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10sp"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eventDetailsBackTV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:paddingStart="10dp"
                    android:src="@drawable/ic_arrow_back_short" />

                <!--TODO Fix this-->

                <ImageView
                    android:id="@+id/eventDetailsEditEventIV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_edit_white" />

                <ImageView
                    android:id="@+id/eventDetailsCancelEventIV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_toStartOf="@id/eventDetailsEditEventIV"
                    android:paddingStart="5dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/ic_cancel" />


            </RelativeLayout>


            <TextView
                android:id="@+id/eventDetailsTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventDetailsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Description:"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventDetailsDescriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingEnd="8dp"
                    android:text="desc"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventDetailsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Category:"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventDetailsCategoryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="category"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventDetailsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Date:"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventDetailsDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Maximum"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventDetailsStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="Start Time"
                        android:textAlignment="center"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/eventDetailsStartTimeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Maximum"
                        android:textAlignment="center"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventDetailsENDTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="End Time"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/eventDetailsEndTimeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="Maximum"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/eventDetailsLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Location:"
                            android:textColor="@color/whiteColor"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/eventDetailsLocationTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="desc"
                            android:textColor="@color/whiteColor"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/eventDetailsMapIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Map"
                        android:gravity="center"
                        android:src="@drawable/ic_map_2"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>


            <Button
                android:id="@+id/eventDetailsConcludeEventBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/wbutton"
                android:paddingStart="5sp"
                android:paddingRight="5sp"
                android:visibility="gone"
                android:text="Conclude Event!"
                android:textColor="@color/vtBlue" />

        </LinearLayout>

        <TextView
            android:id="@+id/eventDetailsvolText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="Volunteers Needed:"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/eventMinimum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Minimum:"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventDetailsMinimumTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingEnd="4dp"
                    android:text="Minimum"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/eventMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Maximum:"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventDetailsMaximumTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingEnd="4dp"
                    android:text="Maximum"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>


        <!--pending Adapter-->
        <LinearLayout
            android:id="@+id/eventDetailsPendingVolunteersLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending Volunteers:"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDetailsPendingVolunteersTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp" />

        </LinearLayout>


        <ListView
            android:id="@+id/eventPendingVolunteersLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />


        <LinearLayout
            android:id="@+id/eventDetailsRegisteredVolunteersLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered Volunteers: "
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDetailsRegisteredVolunteersTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp" />

        </LinearLayout>


        <ListView
            android:id="@+id/eventRegisteredVolunteersLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />


        <LinearLayout
            android:id="@+id/eventDetailsAttendedVolunteersLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attended Volunteers:"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDetailsAttendedVolunteersTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="--"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="15sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/eventAttendedVolunteersLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</ScrollView>



