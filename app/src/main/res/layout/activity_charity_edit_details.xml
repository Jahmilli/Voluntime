<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_1"
    android:orientation="horizontal">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/editCharitySV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Details"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/whiteColor"
                android:textSize="37sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Edit Charity Details"
                android:textSize="23sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/whiteColor" />

            <EditText
                android:id="@+id/editCharityNameET"
                style="@style/loginEditTexts"
                android:layout_marginTop="50sp"
                android:ems="10"
                android:hint="Charity Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editCharityAddressET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Charity Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/editCharityPhoneET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Charity Phone Number"
                android:inputType="phone"
                android:maxLength="12" />

            <EditText
                android:id="@+id/editCharityDescriptionET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Charity Description"
                android:inputType="text" />

            <EditText
                android:id="@+id/editCharityCategoryET"
                style="@style/loginEditTexts"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Categories"
                android:inputType="text" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/editDetailsBackTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:text="Back"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/whiteColor"
                    android:textSize="25sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/editFinishCharityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:text="Finish"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/whiteColor"
                    android:textSize="25sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>