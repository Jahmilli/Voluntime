<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/adapterEventLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="66.6">

        <ImageView
            android:id="@+id/adapterEventStatusIV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:src="@drawable/ic_plus" />

        <TextView
            android:id="@+id/adapterEventDateTV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="start"
            android:text="" />

        <TextView
            android:id="@+id/adapterEventTitleTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:gravity="right"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/adapterEventIV1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:src="@drawable/ic_plus" />

        <ImageView
            android:id="@+id/adapterEventInfoIV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_info"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/adapterEventRatingIV"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_heart_red_icon"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>