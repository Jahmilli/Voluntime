<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/adapterEventLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!--Dot-->
        <RelativeLayout
            android:id="@+id/adapterDot"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.05"
            android:visibility="gone">

            <ImageView
                android:id="@+id/adapterEventStatusDotReject"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_location_dot_red"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/adapterEventStatusDotReg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_location_dot_green"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/adapterEventStatusDotPen"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_location_dot_black"
                android:visibility="gone" />

        </RelativeLayout>

        <!--Event Date-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.22">

            <TextView
                android:id="@+id/adapterEventDateTV"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="12sp" />

        </RelativeLayout>

        <!--Event Name-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.22">

            <TextView
                android:id="@+id/adapterEventTitleTV"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!--Charity-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.22">

            <TextView
                android:id="@+id/adapterEventCharityTV"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|center_horizontal"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

        <!--Buttons-->
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/adapterEventIV1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_plus"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/adapterEventInfoIV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_inf2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/adapterEventRatingIV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:visibility="gone" />

                <!--<ImageView-->
                    <!--android:id="@+id/adapterEventRatingIV"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:src="@drawable/ic_stars_black_24dp" />-->

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>