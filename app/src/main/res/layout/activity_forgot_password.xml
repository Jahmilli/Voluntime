<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    tools:context=".Activities.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Reset Your Password"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/whiteColor"
            android:textSize="35dp"/>

        <TextView
            android:id="@+id/forgotPasswordDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="@string/password_reset_txt"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_light"
            android:textSize="17.3dp"
            android:textColor="@color/whiteColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/forgotPasswordET"
                android:hint="@string/email_txt"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="@color/whiteColor"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorHint="@color/whiteColor"
                android:textColorLink="@color/colorPrimary"
                android:textSize="15.4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="38.4dp"
            android:background="@drawable/rect_whitefull"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forgotPasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESET PASSWORD"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:padding="22dp"
                android:textColor="#009eee"
                android:textSize="15.4dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>