<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VolunteerDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volunteerDetailsBackTV"
                android:layout_width="433dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/volunteerDetailseEditBtn"
                android:layout_width="198dp"
                android:layout_height="33dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="2sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="2sp"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />

        </LinearLayout>

        <!-- Main Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/volunteerDetailsNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:textColor="#444"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volunteerDetailsTypeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textColorHighlight="@android:color/black"/>


            <!-- Shared Attributes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/volunteerDetailsEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:text="Email: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/volunteerDetailsEmailTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/volunteerDetailsPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:text="Phone: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/volunteerDetailsPhoneTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/volunteerDetailsAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:text="Address: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/volunteerDetailsAddressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20sp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Individual Volunteer Attributes -->
            <LinearLayout
                android:id="@+id/volunteerDetailsVolunteerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/volunteerDetailsDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20sp"
                        android:text="Born: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/volunteerDetailsDobTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/volunteerDetailsGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20sp"
                        android:text="Gender: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/volunteerDetailsGenderTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginBottom="20sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/volunteerDetailsHistoryBtn"
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:text="Volunteer History" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
